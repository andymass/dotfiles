function! s:ClearRegisters()
    let l:regs = 'abcdefghijklmnopqrstuvwxyz0123456789*+-'
    for l:r in split(l:regs, '\zs')
        call setreg(l:r, [])
    endfor
endfunction
command! ClearRegisters call s:ClearRegisters()

