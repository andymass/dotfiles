function! EmoComplete(findstart, base)
    echo a:findstart
    sleep 1
    echo a:base
    sleep 1
    " echo emoji#complete(a:findstart, a:base)
    " sleep 2
    return emoji#complete(a:findstart, a:base)
endfunction

