function! s:hi_show()
    let [l:l, l:c] = [line('.'), col('.')]
    echo 'hi<' . synIDattr(synID(l:l,l:c,1),'name')
        \ . '> trans<' . synIDattr(synID(l:l,l:c,0),'name')
        \ . '> lo<' . synIDattr(synIDtrans(synID(l:l,l:c,1)),'name') . '>'
endfunction
nnoremap gB :call <sid>hi_show()<cr>

